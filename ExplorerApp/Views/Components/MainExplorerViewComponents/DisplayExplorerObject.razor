@inherits DisplayExplorerObjectBase

<a class="list-group-item list-group-checkable list-group-item-action d-flex gap-3 py-3 cursor-def container-fluid" href="#" aria-current="true"
    @ondblclick="OpenDirectory">
    <table width="100%">
        <tr>
            <td width="45"><img src="@ExplorerObject.Icon" width="35" height="35" alt="twbs" style="margin-right: 10px;"></td>
            <td width="92%">
                <div class="d-flex gap-2 w-100 justify-content-between">
                    <div>
                        <h6 class="mb-0">@ExplorerObject.ObjectName</h6>
                    </div>
                </div>
            </td>
            <td width="80" align="left">
                <small class="opacity-50 text-nowrap">SIZE: @ExplorerObject.SizeForView</small>
            </td>
        </tr>
    </table>
</a>