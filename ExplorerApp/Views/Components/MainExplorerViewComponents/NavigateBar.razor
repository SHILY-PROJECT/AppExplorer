@inherits NavigateBarBase

<div style="display: inline-flex;">
    <label type="submit" class="btn btn-dark" style="width: 60px; height: 38px" @onclick="() => ChangeRoute(false)">Back</label>
    <label type="submit" class="btn btn-dark" style="width: 60px; height: 38px; margin-left: 10px;" @onclick="() => ChangeRoute(true)">Next</label>
    <select class="form-select" style="margin-left: 25px;" aria-label="Default select example">
        <option value="SortByDefault">Сортировка по умолчанию</option>
        <option value="SortByType">Сортировать по типу</option>
        <option value="SortByAlphabet">Сортировать по алфавиту</option>
        <option value="SortBySizeFromMinToMax">Сортировать по размеру ⬇</option>
        <option value="SortBySizeFromMaxToMin">Сортировать по размеру ⬆</option>
    </select>
</div>